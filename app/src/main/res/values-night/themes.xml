<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BMB" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorOutline">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Widget.App.MaterialDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/colorPrimaryDark</item>
        <item name="colorOnContainer">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>


    <style name="IconLogo">
        <item name="tint">@color/colorPrimaryDark</item>
    </style>

    <style name="TextSplash" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="UserNameTitle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:strokeColor">?attr/colorBackgroundFloating</item>
        <item name="fontFamily">@font/product_sans_black</item>
    </style>
</resources>