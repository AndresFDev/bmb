<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/BgSplash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity">

    <ImageView
        android:id="@+id/imgLogo"
        style="@style/IconLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_logo"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvNameLogo"
        style="@style/TextSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="@dimen/textXLarge"
        app:fontFamily="@font/product_sans_black"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSlogan"
        style="@style/TextSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amor por los peludos"
        android:textAlignment="center"
        android:textSize="@dimen/textMedium"
        app:fontFamily="@font/product_sans_italic"
        app:layout_constraintTop_toBottomOf="@+id/tvNameLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>